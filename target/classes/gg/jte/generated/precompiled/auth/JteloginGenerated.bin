

    
    <form
    hx-post="/auth/login"
    hx-target="#main"
    hx-swap="outerHTML"
    hx-push-url="true"
    hx-headers='js:{
        timeZoneOffset: new Date().getTimezoneOffset()
    }'
    class="md:w-2/5
    w-4/5 flex flex-col bg-secondary p-8 mx-auto gap-8">
        <span class="text-accent text-2xl font-bold"></span>
        <div class="flex flex-col">
            <label class="text-accent" for="login"></label>
            <input
            class="
            outline-none border border-2 border-primary rounded text-neutral text-sm min-h-8
            focus:border-accent"
            type="text" name="login" id="login">
            
                <span class="font-bold text-error"></span>
            
        </div>
        <div class="flex flex-col">
            <label class="text-accent" for="password"></label>
            <input
            class="
            outline-none border border-2 border-primary rounded text-neutral text-sm min-h-8
            focus:border-accent"
            type="password" name="password" id="password">
            
                <span class="font-bold text-error"></span>
            
        </div>
        <div class="flex gap-4 items-center justify-between">
            <button
            type="submit"
            class="text-left px-2 py-1 bg-accent text-primary rounded cursor-pointer"></button>
            <a
            class="cursor-pointer underline text-accent font-semibold"
            hx-get="/auth/signup"
            hx-target="#main"
            hx-swap="outerHTML"
            hx-push-url="true"></a>
        </div>
        <input type="hidden" name="_csrf" value="">
    </form>


